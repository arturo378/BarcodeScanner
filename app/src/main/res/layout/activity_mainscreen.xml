<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/inv_bground"
    android:layout_height="match_parent"
    tools:context="e.lotz3.barcodescanner.MainActivity">
    
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@drawable/gradientnew"
        android:layout_width="match_parent"
        android:theme="@style/AppToolbar"
        android:layout_height="wrap_content"></android.support.v7.widget.Toolbar>

    <Button
        android:id="@+id/button_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/toolbar"
        android:layout_marginEnd="59dp"
        android:layout_marginTop="47dp"
        android:background="@drawable/round_btn_no_c"
        android:text="Scan" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/button_scan"
        android:layout_marginStart="31dp"
        android:background="@drawable/round_btn_no_c"
        android:text="Add Item" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="168dp"
        android:textColor="@color/White"/>
</RelativeLayout>